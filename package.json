{
  "dependencies": {
    "cypress": "^15.0.0",
    "dotenv": "^17.2.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0"
  },
  "scripts": {
    "cy:open": "cypress open",
    "performance-problems": "cypress run --spec cypress/e2e/performance_problems",
    "nerdearla": "cypress run --spec cypress/e2e/nerdearla",
    "home": "cypress run --spec cypress/e2e/nerdearla/home.cy.js",
    "purchase": "cypress run --spec cypress/e2e/nerdearla/purchase.cy.js",
    "merge-reports": "rm -f cypress/reports/combined.json && mochawesome-merge cypress/reports/*.json > cypress/reports/combined.json",
    "generate-report": "marge cypress/reports/combined.json --reportDir cypress/reports --reportFilename index",
    "report": "npm run merge-reports && npm run generate-report"
  }
}
